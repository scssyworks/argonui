{
  "appFolder": "app",
  "sourceFolder": "source",
  "publishFolder": "app/jcr_root/apps/settings/wcm/designs/argonui/clientlibs",
  "demoFolder": "source/clientlib-format/apps/settings/wcm/designs/argonui/clientlibs",
  "assetFolder": "source/assets",
  "server": "http://admin:admin@localhost:4502",
  "aem": {
    "src": {
      "atomPath": "<%= config.source %>/templates/atoms",
      "moleculePath": "<%= config.source %>/templates/molecules",
      "componentPath": "<%= config.source %>/templates/components",
      "content": "<%= config.app %>/jcr_root/content/argonui-ux/**/.content.xml",
      "contentXML": "<%= config.app %>/jcr_root/**/.content.xml",
      "components": "<%= config.app %>/jcr_root/**/*.{html,xml,txt}",
      "models": "<%= config.app %>/jcr_root/apps/**/*.js",
      "staticassets": "<%= config.app %>/jcr_root/apps/settings/wcm/**/*.{js,css}",
      "mediaassets": "<%= config.app %>/jcr_root/**/*.{jpg,mov,png,mp4,svg}",
      "fontassets": "<%= config.app %>/jcr_root/**/*.{otf,eot,ttf,woff}",
      "jsonData": "<%= config.app %>/jcr_root/**/*.json"
    },
    "target": {
      "atomPath": "<%= config.app %>/jcr_root/apps/argonui/components/atoms",
      "moleculePath": "<%= config.app %>/jcr_root/apps/argonui/components/molecules",
      "componentPath": "<%= config.app %>/jcr_root/apps/argonui/components/content"
    },
    "uxContentDescriptor": "argonui-ux",
    "componentGroup": "demo-argonui",
    "componentGroupName": "Customer Hub"
  },
  "assemble": {
    "options": {
      "layouts": "*.hbs",
      "layoutdir": "<%= config.source %>/templates/layouts",
      "data": [
        "<%= config.source %>/data/*.{json,yml}",
        "<%= config.source %>/templates/components/{,*/}*.json"
      ],
      "partials": [
        "<%= config.source %>/templates/components/{,*/}*.hbs"
      ],
      "collections": [
        {
          "name": "components",
          "inflection": "component",
          "sortorder": "ascending",
          "sortby": "datetime"
        }
      ],
      "helpers": [
        "<%= config.source %>/helpers/*"
      ],
      "plugins": [
        "grunt-tasks/assemble-aem-plugin.js"
      ]
    },
    "pages": {
      "options": {
        "aemuxlib": {
          "contentRoot": "<%= config.app %>/jcr_root/content/argonui-ux",
          "designJcrPath": "/apps/settings/wcm/designs/argonui",
          "jcrFileRoot": "<%= config.app %>/jcr_root/",
          "wrapJsonData": true
        }
      },
      "files": [
        {
          "expand": true,
          "src": [
            "<%= config.source %>/templates/components/**/**/**/*.hbs"
          ],
          "dest": "<%= config.app %>/jcr_root/apps/argonui/components/content"
        }
      ]
    }
  },
  "copy": {
    "uxlibdemo": [
      {
        "expand": true,
        "dot": true,
        "cwd": "<%= config.source %>/clientlib-format",
        "src": [
          "apps/settings/wcm/designs/**"
        ],
        "dest": "<%= config.app %>/jcr_root/"
      }
    ],
    "jsonData": [
      {
        "expand": true,
        "flatten": true,
        "cwd": "<%= config.source %>/templates/components/",
        "src": [
          "**/data/*.json"
        ],
        "dest": "<%= config.app %>/jcr_root/apps/settings/wcm/designs/argonui/jsonData"
      }
    ]
  },
  "webfont": {
    "src": "<%= config.source %>/assets/icons/*.svg",
    "target": "<%= config.source %>/clientlib-format/apps/settings/wcm/designs/argonui/clientlibs/vendor.publish/iconfonts",
    "scss": {
      "target": "<%= config.source %>/assets/styles/common"
    },
    "fontFile": "argonui-icons",
    "relativePath": "../iconfonts"
  },
  "webpack": {
    "filePath": "apps/settings/wcm/designs/argonui/clientlibs/[name].publish/js/[name].js",
    "chunkFilePath": "apps/settings/wcm/designs/argonui/clientlibs/[name].publish/js/[name].[chunkhash].js",
    "root": "app/jcr_root",
    "modes": {
      "dev": "development",
      "prod": "development"
    },
    "entry": {
      "global": "source/scripts/core/core.js"
    },
    "cacheGroups": {
      "vendor": {
        "test": "[\\\\/]node_modules[\\\\/]|[\\\\/]vendor\\.scss",
        "name": "vendor",
        "minSize": 0,
        "chunks": "all"
      },
      "common": {
        "testMultiple": true,
        "name": "common",
        "minSize": 0,
        "chunks": "all"
      },
      "dashboard": {
        "testMultiple": true,
        "name": "dashboard",
        "minSize": 0,
        "chunks": "all"
      },
      "orders": {
        "testMultiple": true,
        "name": "orders",
        "minSize": 0,
        "chunks": "all"
      },
      "financial": {
        "testMultiple": true,
        "name": "financial",
        "minSize": 0,
        "chunks": "all"
      },
      "maintenance": {
        "testMultiple": true,
        "name": "maintenance",
        "minSize": 0,
        "chunks": "all"
      },
      "contacts": {
        "testMultiple": true,
        "name": "contacts",
        "minSize": 0,
        "chunks": "all"
      },
      "default_en": {
        "test": "[\\\\/]default[\\\\/]en[\\\\/]base.scss",
        "name": "default.en",
        "enforce": true,
        "chunks": "all"
      }
    },
    "componentGroups": {
      "common": [
        "source/scripts/common/",
        "source/scripts/utils/",
        "source/templates/components/introscreen/",
        "source/templates/components/leftnavigation/",
        "source/templates/components/header/",
        "source/templates/components/pagination/",
        "source/templates/components/tabs/"
      ],
      "dashboard": [
        "source/templates/components/orderingcard/",
        "source/templates/components/maintenancecard/",
        "source/templates/components/contactcard/"
      ],
      "orders": [
        "source/templates/components/ordersearch/",
        "source/templates/components/orderdetails/"
      ],
      "financial": [
        "source/templates/components/financialstatement/",
        "source/templates/components/financialsstatementsummary/"
      ],
      "maintenance": [
        "source/templates/components/maintenance/",
        "source/templates/components/eventslisting/",
        "source/templates/components/documents/"
      ],
      "contacts": [
        "source/templates/components/contacts/"
      ]
    },
    "handlebars": {
      "helpersFolder": "source/scripts/helpers",
      "currentRelativeFolder": "source/templates-hbs"
    },
    "fonts": {
      "fontPath": "apps/settings/wcm/designs/argonui/clientlibs/global.publish/fonts"
    },
    "clean": "app",
    "cssPath": "apps/settings/wcm/designs/argonui/clientlibs/[name].publish/css/[name].css",
    "cssChunkPath": "apps/settings/wcm/designs/argonui/clientlibs/[name].publish/css/[name].css"
  },
  "clientlibs": {
    "vendor": "apps/settings/wcm/designs/argonui/clientlibs/vendor.publish/js/vendor.js",
    "common": "apps/settings/wcm/designs/argonui/clientlibs/common.publish/js/common.js",
    "default.en": "apps/settings/wcm/designs/argonui/clientlibs/default.en.publish/js/default.js"
  },
  "watch": {
    "assemble": {
      "files": [
        "<%= config.source %>/templates/components/**/*.hbs",
        "<%= config.source %>/templates/layouts/**/*.hbs",
        "<%= config.source %>/templates/components/**/*.json"
      ],
      "tasks": [
        "assemble",
        "copy:jsonData",
        "aemdeploy:components",
        "aemdeploy:models",
        "aemdeploy:jsonData"
      ]
    },
    "static": {
      "files": [
        "<%= config.source %>/scripts/**/*.js",
        "<%= config.source %>/templates/**/*.js",
        "<%= config.source %>/styles/*.scss",
        "<%= config.source %>/templates/components/**/*.scss"
      ],
      "tasks": [
        "shell:lintingDev",
        "shell:webpackDev",
        "shell:removeChunkHash",
        "copy:uxlibdemo",
        "copy:jsonData",
        "assemble",
        "aemcomponentcopy:uxlib",
        "aemdeploy"
      ]
    },
    "aem": {
      "files": [
        "<%= config.source %>/templates/components/**/*.html"
      ],
      "tasks": [
        "aemcomponentcopy:uxlib",
        "aemdeploy:components"
      ]
    }
  }
}